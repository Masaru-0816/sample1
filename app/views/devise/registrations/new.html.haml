.account_body
  = render 'shared/header' 
  -# ヘッダー部分テンプレート

  .account_registration
    .account_registato
      %h1 新規会員登録

    .account_main_bottom
      .account_main_bottom_bar
        = link_to "new_user_registration_path", class: "account_main_bottom_bar_btn account_main_bottom_bar_btn_mail" do
          = icon('far', 'facebook-square',  class: "account_icon_mail")
          メールアドレスで登録する
        = link_to "https://www.facebook.com/", class: "account_main_bottom_bar_btn account_main_bottom_bar_btn_facebook" do
          = icon('fab', 'facebook-square',  class: "account_icon_facebook")
          Facebookで登録する
        = link_to "https://www.google.com/", class: "account_main_bottom_bar_btn account_main_bottom_bar_btn_google" do
          = image_tag "google_logo.png", size: "25x25", class: "account_icon_google"
          Googleで登録する

  = render "shared/footer"
  -# フッター部分テンプレート